import java.util.Scanner;

public class Factorial {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int kq =1;
		 if (n%2==0) {
			 for(int i =2;i<=n;i+=2) {
				 kq*=i;
			 }
		 }
		 else  {
				 for(int i=1;i<=n;i+=2) {
					 kq*=i;
				 }
			 }
		 System.out.println(kq);
		
	}

}
